*
  box-sizing border-box
  margin 0
  padding 0
  font-size 1rem

  &::after,
  &::before
    box-sizing border-box

:root
  font-size 22px
  font-weight 100

html
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased

body
  background-color white
  color #333
  font-family "Futura PT"
  line-height 1
  padding 0 1rem

h1, h2, h3, h4, h5, h6
  padding 2rem 0 1rem 0

img, iframe, embed
  max-width 100%
  height auto
  display block

ul
  list-style none

.uuusvg
  fill #333

a svg.uuusvg
  height 51px
  width 127px

nav
  display grid
  grid-template-columns max-content max-content 1fr
  align-items baseline
  grid-gap 2rem
  margin-bottom 0

  p
    font-size 2rem
    font-weight 100

  a
    display inline-block
    text-decoration none

  div
    text-align right

    a
      padding .5rem


.feature
